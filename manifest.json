
{
  "manifest_version": 2,
  "name": "no-adv-iframe",
  "description": "no-advtisement-iframe",
  "version": "1.0.0",

  "browser_action": {
    "desc":"设置 content scripts 以及什么时候注入什么类型的页面",
    "default_icon-": "img/icon.png",
    "default_popup": "pop/index.html"
  },
 
  "content_scripts": [{
    "matches": [
      "*://trooper-test.edutest.hz.netease.com/*",
      "*://www.cnblogs.com/*",
      "*://inance.ifeng.com/*",
      "*://blog.csdn.net/*",
      "*://www.bkjia.com/*",
      "*://www.jb51.net/article/*",
      "http://doc.hz.netease.com/pages/viewpage.action*",
      "https://zhidao.baidu.com/*",
      "https://www.baidu.com/*",
      "https://baike.baidu.com/*",
      "*://www.360doc.com/*",
      "*://www.techug.com/*",
      "*://www.jb51.net/*",
      "*://www.runoob.com/*"
    ],
    "css-":["styles/styles.css"],
    "js": [
      "ct/index.js"
    ],
    "run_at": "document_start"
  }],

  "background": {
    "scripts": [
      "bg/index.js"
    ]
  },


  "permissions": [
    "<all_urls>",
    "tabs",
    "storage",
    "unlimitedStorage"
  ]
}